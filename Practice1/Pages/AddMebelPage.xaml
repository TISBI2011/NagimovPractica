<Page x:Class="Practice1.Pages.AddMebelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMebelPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding Name}"/>
            <TextBlock Text="Материал"/>
            <TextBox Text="{Binding Material}"/>
            <TextBlock Text="Код Типа"/>
            <TextBox Text="{Binding TypeId}"/>
            <TextBlock Text="Style"/>
            <TextBox Text="{Binding Style}"/>
            <TextBlock Text="Количество"/>
            <TextBox Text="{Binding Amount}"/>
            <Button x:Name="BSave"
                Content="Сохранить"
                Click="BSave_Click"/>
            <Button x:Name="BCancel"
                Content="Отменить"
                Click="BCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
