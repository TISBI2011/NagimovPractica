<Page x:Class="Practice1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="LightYellow">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="23" HorizontalAlignment="Center" Text="Login" FontWeight="Bold"/>

            <TextBox x:Name="TBLogin" Width="180">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock FontSize="23" HorizontalAlignment="Center" Text="Password" FontWeight="Bold">

            </TextBlock>
            <TextBox x:Name="TBPassword" Width="180">
                <TextBox.Effect>
                    <DropShadowEffect/>
                </TextBox.Effect>

            </TextBox>
            <Button x:Name="BLogin"
                    Content="Войти"
                    Click="BLogin_Click"
                    Margin="150,30,150,0"
                    FontWeight="Bold"
                    FontSize="16"
                    Background="Orange"/>
        </StackPanel>
    </Grid>
</Page>
